@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{





    if (((Control_Group_Web.Models.User)Session["user"]) == null)
    {
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Log in", "Login", "Firebase", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        </ul>
    }

    if (((Control_Group_Web.Models.User)Session["user"]) != null)
    {
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                   @(((Control_Group_Web.Models.User)Session["user"]).Name)
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Show Remaning Videos", "showRemaningVideos", "Firebase", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    <li>@Html.ActionLink("Show All Videos", "ShowAgain", "Firebase", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    <li>@Html.ActionLink("Log out", "Logout", "Firebase", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                </ul>
            </li>

           
        </ul>
    }

}
